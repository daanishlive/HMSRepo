@model HMS.WEB.Areas.ViewModels.AccomodationPacakageActionModel

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title">
            <span>Delete Accomodation Type</span>
        </h5>


        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <form id="createAccomodation">
            <input type="hidden" name="ID" value="@Model.ID" />
            <div class="alert alert-danger" role="alert">
                Are You Sure To Delete This Accomodation!
            </div>
            <div id="errorDiv">

            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button id="deleteBtn" type="button" class="btn btn-primary">Delete</button>
    </div>
</div>

<script>
    $("#deleteBtn").click(function () {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("Delete", "AccomodationPackages")',
                data: $("#createAccomodation").serialize()
            })
            .done(function (response) {
                if (response.Success) {
                    window.location.href=("@Url.Action("Index", "AccomodationPackages")")
                }
                else {
                    $(".errorDiv").html(response.Message);
                }
            })
    });
</script>

